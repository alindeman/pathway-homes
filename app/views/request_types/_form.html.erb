<div ng-controller="RequestTypesCtlr">
  <h1>Request Type Form</h1>
  <%= simple_form_for @request_type do |f| %>
    <div class="form-group">
      <label class="col-sm-2 control-label">Category</label>
      <div class="col-sm-10">
        <%= f.input :category, label: false  %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Request</label>
      <div class="col-sm-10">
        <%= f.input :request, label: false  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
